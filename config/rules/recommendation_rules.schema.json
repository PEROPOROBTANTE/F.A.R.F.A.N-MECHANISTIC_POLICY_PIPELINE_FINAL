{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/recommendation_rules_enhanced.schema.json",
  "title": "Recommendation Rules Schema (Enhanced)",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^2\\.0(\\.\\d+)?$"
    },
    "enhanced_features": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "uniqueItems": true,
      "minItems": 7,
      "allOf": [
        {"contains": {"const": "template_parameterization"}},
        {"contains": {"const": "execution_logic"}},
        {"contains": {"const": "measurable_indicators"}},
        {"contains": {"const": "unambiguous_time_horizons"}},
        {"contains": {"const": "testable_verification"}},
        {"contains": {"const": "cost_tracking"}},
        {"contains": {"const": "authority_mapping"}}
      ]
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "rule_id": {
            "type": "string"
          },
          "level": {
            "type": "string",
            "enum": ["MICRO", "MESO", "MACRO"]
          },
          "when": {
            "type": "object"
          },
          "template": {
            "type": "object",
            "properties": {
              "problem": {"type": "string", "minLength": 40},
              "intervention": {"type": "string", "minLength": 40},
              "indicator": {
                "type": "object",
                "properties": {
                  "name": {"type": "string", "minLength": 5},
                  "baseline": {"type": ["number", "null"]},
                  "target": {"type": "number"},
                  "unit": {"type": "string"},
                  "formula": {"type": "string"},
                  "acceptable_range": {
                    "type": "array",
                    "items": {"type": "number"},
                    "minItems": 2,
                    "maxItems": 2
                  },
                  "baseline_measurement_date": {"type": "string"},
                  "measurement_frequency": {"type": "string"},
                  "data_source": {"type": "string"},
                  "data_source_query": {"type": "string"},
                  "responsible_measurement": {"type": "string"},
                  "escalation_if_below": {"type": "number"}
                },
                "required": ["name", "target", "unit"],
                "additionalProperties": true
              },
              "responsible": {
                "type": "object",
                "properties": {
                  "entity": {"type": "string"},
                  "role": {"type": "string"},
                  "partners": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 1
                  },
                  "legal_mandate": {"type": "string"},
                  "approval_chain": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "level": {"type": "integer", "minimum": 1},
                        "role": {"type": "string"},
                        "decision": {"type": "string"}
                      },
                      "required": ["level", "role", "decision"],
                      "additionalProperties": false
                    }
                  },
                  "escalation_path": {
                    "type": "object",
                    "properties": {
                      "threshold_days_delay": {"type": "integer", "minimum": 0},
                      "escalate_to": {"type": "string"},
                      "final_escalation": {"type": "string"},
                      "consequences": {
                        "type": "array",
                        "items": {"type": "string"}
                      }
                    },
                    "required": ["threshold_days_delay", "escalate_to", "final_escalation", "consequences"],
                    "additionalProperties": false
                  }
                },
                "required": ["entity", "role", "partners"],
                "additionalProperties": true
              },
              "horizon": {
                "type": "object",
                "properties": {
                  "start": {"type": "string"},
                  "end": {"type": "string"},
                  "start_type": {"type": "string"},
                  "duration_months": {"type": "integer", "minimum": 0},
                  "milestones": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "offset_months": {"type": "integer"},
                        "deliverables": {
                          "type": "array",
                          "items": {"type": "string"}
                        },
                        "verification_required": {"type": "boolean"}
                      },
                      "required": ["name", "offset_months", "deliverables", "verification_required"],
                      "additionalProperties": false
                    },
                    "minItems": 1
                  },
                  "dependencies": {
                    "type": "array",
                    "items": {"type": "string"}
                  },
                  "critical_path": {"type": "boolean"}
                },
                "required": ["start", "end", "milestones"],
                "additionalProperties": true
              },
              "verification": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "id": {"type": "string"},
                    "type": {"type": "string"},
                    "artifact": {"type": "string"},
                    "format": {"type": "string"},
                    "required_sections": {
                      "type": "array",
                      "items": {"type": "string"}
                    },
                    "approval_required": {"type": "boolean"},
                    "approver": {"type": "string"},
                    "due_date": {"type": "string"},
                    "automated_check": {"type": "boolean"},
                    "validation_query": {"type": "string"},
                    "pass_condition": {"type": "string"}
                  },
                  "required": ["id", "type", "artifact", "format", "required_sections", "approval_required", "approver", "due_date", "automated_check"],
                  "additionalProperties": true
                },
                "minItems": 1
              },
              "template_id": {"type": "string"},
              "template_params": {
                "type": "object",
                "properties": {
                  "pa_id": {"type": "string", "pattern": "^PA\\d{2}$"},
                  "dim_id": {"type": "string", "pattern": "^DIM\\d{2}$"},
                  "cluster_id": {"type": "string", "pattern": "^CL0[1-4]$"},
                  "question_id": {"type": "string", "pattern": "^Q\\d{3}$"}
                },
                "additionalProperties": false
              }
            },
            "required": ["problem", "intervention", "indicator", "responsible", "horizon", "verification", "template_id", "template_params"],
            "additionalProperties": false
          },
          "execution": {
            "type": "object",
            "properties": {
              "trigger_condition": {"type": "string"},
              "blocking": {"type": "boolean"},
              "auto_apply": {"type": "boolean"},
              "requires_approval": {"type": "boolean"},
              "approval_roles": {
                "type": "array",
                "items": {"type": "string"},
                "minItems": 1
              }
            },
            "required": ["trigger_condition", "blocking", "auto_apply", "requires_approval", "approval_roles"],
            "additionalProperties": false
          },
          "budget": {
            "type": "object",
            "properties": {
              "estimated_cost_cop": {"type": "number"},
              "cost_breakdown": {
                "type": "object",
                "minProperties": 1,
                "additionalProperties": {
                  "type": "number"
                }
              },
              "funding_sources": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "source": {"type": "string"},
                    "amount": {"type": "number"},
                    "confirmed": {"type": "boolean"}
                  },
                  "required": ["source", "amount", "confirmed"],
                  "additionalProperties": false
                },
                "minItems": 1
              },
              "fiscal_year": {"type": "integer"}
            },
            "required": ["estimated_cost_cop", "cost_breakdown", "funding_sources", "fiscal_year"],
            "additionalProperties": false
          }
        },
        "required": ["rule_id", "level", "when", "template", "execution", "budget"],
        "additionalProperties": false,
        "allOf": [
          {
            "if": {
              "properties": {"level": {"const": "MICRO"}}
            },
            "then": {
              "properties": {
                "rule_id": {"type": "string", "pattern": "^REC-MICRO-PA\\d{2}-DIM\\d{2}-[A-Z0-9-]+$"},
                "when": {
                  "type": "object",
                  "properties": {
                    "pa_id": {"type": "string", "pattern": "^PA\\d{2}$"},
                    "dim_id": {"type": "string", "pattern": "^DIM\\d{2}$"},
                    "score_lt": {"type": "number"}
                  },
                  "required": ["pa_id", "dim_id", "score_lt"],
                  "additionalProperties": false
                },
                "template": {
                  "properties": {
                    "template_params": {
                      "required": ["pa_id", "dim_id", "question_id"]
                    }
                  }
                }
              }
            }
          },
          {
            "if": {
              "properties": {"level": {"const": "MESO"}}
            },
            "then": {
              "properties": {
                "rule_id": {"type": "string", "pattern": "^REC-MESO-CL0[1-4]-[A-Z0-9-]+$"},
                "when": {
                  "type": "object",
                  "properties": {
                    "cluster_id": {"type": "string", "pattern": "^CL0[1-4]$"},
                    "score_band": {"type": "string", "enum": ["BAJO", "MEDIO", "ALTO"]},
                    "variance_level": {"type": "string", "enum": ["BAJA", "MEDIA", "ALTA"]},
                    "variance_threshold": {"type": "number"},
                    "weak_pa_id": {"type": "string", "pattern": "^PA\\d{2}$"}
                  },
                  "required": ["cluster_id", "score_band", "variance_level"],
                  "additionalProperties": false
                },
                "template": {
                  "properties": {
                    "template_params": {
                      "required": ["cluster_id"]
                    }
                  }
                }
              }
            }
          },
          {
            "if": {
              "properties": {"level": {"const": "MACRO"}}
            },
            "then": {
              "properties": {
                "rule_id": {"type": "string", "pattern": "^REC-MACRO-[A-Z0-9-]+$"},
                "when": {
                  "type": "object",
                  "properties": {
                    "macro_band": {
                      "type": "string",
                      "enum": ["DEFICIENTE", "INSUFICIENTE", "SATISFACTORIO", "BUENO", "EXCELENTE"]
                    },
                    "clusters_below_target": {
                      "type": "array",
                      "items": {"type": "string", "pattern": "^CL0[1-4]$"},
                      "uniqueItems": true
                    },
                    "variance_alert": {
                      "type": "string",
                      "enum": ["GENERALIZADA", "FOCALIZADA", "MODERADA", "SIN_ALERTA"]
                    },
                    "priority_micro_gaps": {
                      "type": "array",
                      "items": {"type": "string", "pattern": "^PA\\d{2}-DIM\\d{2}$"},
                      "uniqueItems": true
                    }
                  },
                  "required": ["macro_band"],
                  "additionalProperties": false
                }
              }
            }
          }
        ]
      }
    }
  },
  "required": ["version", "enhanced_features", "rules"],
  "additionalProperties": false
}
